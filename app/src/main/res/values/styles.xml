<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application style -->
    <style name="AppTheme" parent="Theme.Calculadora">
        <!-- Customize your app theme here -->
    </style>

    <!-- Button style for the calculator -->
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Function button style for the calculator -->
    <style name="CalculatorFunctionButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/orange</item>
    </style>
</resources>
